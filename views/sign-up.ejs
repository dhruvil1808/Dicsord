<!DOCTYPE html>
<html lang="en">
  <%-include('./partials/bootstrap.ejs')%>
  <%-include('./partials/header.ejs')%>
  <body>
    <%-include("./partials/nav.ejs")%>
    <div class="create-user">
      <form action="/create-user" method="POST">
        <h4>Create an account</h4>
        <h2 class="Alert"><%=alrt%></h2>
       <ul>
        <li><label for="email">EMAIL</label></li>
        <input type="text" id="email" name="email" required />
        <li><label for="username">USERNAME</label></li>
        <input type="text" id="username" name="username" required />
        <li><label for="pno">PHONE NUMBER</label></li>
        <input type="text" id="pno" name="pno" required />
      <li><label for="password">PASSWORD</label></li>
        <input type="password" id="password" name="password" required />
        <li><label for="c-password">CONFIRM PASSWORD</label></li>
        <input type="password" id="c-password" name="c-password" required />
      <li><label for="dob">DATE OF BIRTH</label></li>
        <input type="date" id="dob" name="dob" required />
        <button onclick="validate()">Continue</button>
        <li><a href="/">Already have an account?</a></li>
        </ul>
        <script src="/validate.js"> 
        </script>
      </form>
    </div>
</html>

